{
	"project": "easymake",
	"output": "easymake",
	"sources": [
		"src/*.c"
	],
	"includes": [
		"include"
	],
	"default_target": "gcc-debug",
	"targets": {
		"gcc-debug": {
			"compiler": "gcc",
			"compiler_options": [
				"-ggdb",
				"-Og"
			]
		},
		"gcc-release": {
			"compiler": "gcc",
			"compiler_options": [
				"-s",
				"-O3"
			]
		}
	}
}